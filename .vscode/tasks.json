{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",
                "-I", "../interfaces",  // Include interface headers
                "-I", "../utill/header", // Include implementation class headers
                "Psm.cpp",  // Path to main.cpp
                "utill/source/ProcessManager.cpp",  // Path to source files
                "utill/source/FileHandler.cpp",
                "utill/source/CommandExecutor.cpp",
                "utill/source/ExtensionHandler.cpp",
                "utill/source/ProcessApplication.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"  // Output executable
            ],
            "options": {
                "cwd": "${fileDirname}"  // Set the working directory to the location of tasks.json
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
